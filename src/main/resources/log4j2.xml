<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="Reviewservice" status="INFO" monitorInterval="3600">
	<Properties>
		<Property name="rootLogLevel" value="ALL"/>
		<Property name="logFileName" value="Reviewservice" />
		<Property name="Log_Path" value="/usr/local/log/reviewservice"/>
		<Property name="Log_Pattern" value="%d{MM-dd-yy HH:mm:ss,SSS} %-5p [%c{1}:%L] (%t):  : %m%ex%n" />
	</Properties>
	<Appenders>
		<Console name="ConsoleLog" target="SYSTEM_OUT">
			<PatternLayout pattern="${Log_Pattern}" />
		</Console>
		<RollingFile name="Reviewservice_Log" fileName="${Log_Path}/${logFileName}.log"
			filePattern="${Log_Path}/${logFileName}.log.%d{yyyy-MM-dd}" ignoreExceptions="false">
			<PatternLayout pattern="${Log_Pattern}" />
			<TimeBasedTriggeringPolicy />
		</RollingFile>
	</Appenders>

	<Loggers>		
		<Root level="${rootLogLevel}">
			<AppenderRef ref="Reviewservice_Log" />
			<AppenderRef ref="ConsoleLog" />
		</Root>
	</Loggers>
</Configuration>
